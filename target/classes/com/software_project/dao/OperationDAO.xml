<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.software_project.dao.OperationDAO">
    <insert id="insertDeal">
        insert into soft.record values (#{userEmail},#{fundCode},#{type},#{time},#{flag},#{count},#{flagTime})
    </insert>
    <update id="updateDeal">
        update soft.record set flagTime = #{flagTime},flag = #{flag} where userEmail = #{userEmail} and fundCode=#{fundCode} and time = #{time}
    </update>
    <delete id="deleteOp">
        delete from soft.record where userEmail = #{email}
    </delete>
    <select id="getAllUndoRecord" resultType="com.software_project.pojo.Record">
        /*较为耗时*/
        select * from soft.record where flag = 0
    </select>
</mapper>