Page {
  font-size: 14px;
}

.head {
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top: 0;
  z-index: 99;
  top:0;
}

.container {
  position: absolute;
  width: 100%;
  margin-top:130rpx;
}

.loginContainer {
  /* border: 1rpx solid green; */
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: center;
  margin-top: 130rpx;
}

.loginImg {
  position: absolute;
  width: 100%;
  margin-top: -130rpx;
  z-index: -999;
}

.loginInfo {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  margin-top: 30rpx;
}

.forgotPswd {
  color: #5484dd;
  font-weight: 500;
  /* border: 1rpx solid red; */
  width: 20%;
  height: 50rpx;
  margin-top: 30rpx;
  margin-left: 50rpx;
}

.hint {
  font-size: medium;
  padding-left: 8%;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  color: #252525;
}

.emailPart {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.inputUsrName {
  border: 1rpx solid rgb(212, 212, 212);
  background-color: white;
  box-shadow: 0px 2px 5px 5px rgb(240, 239, 239);
  height: 90rpx;
  width: 80%;
  border-radius: 50rpx;
  padding-left: 5%;
  font-size: medium;
}

.pswPart {
  width: 100%;
  display: flex;
  justify-content: center;
}

.inputUsrPassword {
  border: 1rpx solid rgb(212, 212, 212);
  background-color: white;
  box-shadow: 0px 2px 5px 5px rgb(240, 239, 239);
  height: 90rpx;
  width: 80%;
  border-radius: 50rpx;
  padding-left: 5%;
  font-size: medium;
}

.btnGroup {
  width: 100%;
}

.loginBtn {
  margin-top: 50rpx;
  width:95%;
  height: 90rpx;
  border-radius: 50rpx;
  background: #5484dd;
  box-shadow: 0px 2px 5px 5px rgb(228, 228, 228);
  padding-top: 20rpx;
}

.submitInfo {
  color: #ffffff;
  font-size: medium;
}

.registerBtn {
  margin-top: 50rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background: #ffffff;
  box-shadow: 0px 2px 4px 4px rgb(240, 240, 240);
  padding-top: 20rpx;
}

.registerInfo {
  color: #5484dd;
  font-size: medium;
}

.userEmailPart {
  display: flex;
  border: 1rpx solid red;
}

.top {
  width: 100%;
  height: 195px;
  background: #5484dd;
  padding-top: 15px;
  position: relative;
}

.center {
  width: 93%;
  height: 160px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}

.center_img {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 30px;
}

.center_name {
  font-size: 17px;
}

.center_email {
  color: #BEBEBE;
}

.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 35px;
  margin: 0 auto;
  margin-top: 20rpx;
}

.center_rank {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 35px;
  line-height: 35px;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_rank image {
  width: 35px;
  height: 35px;
}

.center_score {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.center_score image {
  width: 35px;
  height: 35px;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 4;
  mix-blend-mode: screen;
  height: 100rpx;
}

.logOutBtn {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  width: 91%;
  height: 70rpx;
  border-radius: 50rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
  background: #5484dd;
  box-shadow: 0px 2px 5px 5px rgb(228, 228, 228);
  position: relative;
  padding-top: 10rpx;
}

.logOutInfo {
  width: 100%;
  text-align: center;
  font-size: large;
  color: rgb(245, 245, 245);
  padding-top: 5rpx;
}

.middle {
  display: flex;
  width: 100%;
  padding-top: 15rpx;
  position: relative;
}

.middleBlock {
  width: 195rpx;
  height: 165rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
  background: #ffffff;
  box-shadow: 0px 2px 5px 5px rgb(240, 239, 239);
  padding-top: 15px;
  position: relative;
}

.middleBlockImg {
  margin-left: 55rpx;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.middleBlockImg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.middleBlockText {
  width: 100%;
  text-align: center;
  padding-top: 5rpx;
  color: #414141;
}

.bottom {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  width: 91%;
  height: 210rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
  background: #ffffff;
  box-shadow: 0px 2px 5px 5px rgb(240, 239, 239);
  position: relative;
  padding-top: 5rpx;
}

.divLine {
  height: 1rpx;
  width: 100%;
  background: #dcdcdc;
  /* margin-bottom: 3rpx; */
}

.bottomBlock {
  display: flex;
  width: 100%;
}


.bottomBlockText {
  font-size: larger;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.dot{
  width: 10px;
  height: 10px;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 5rpx;
  margin-left: -140rpx;
  margin-right: 10rpx;
  background-color: rgb(231, 52, 52);
  box-shadow:0px 1px 2px 2px rgb(238, 238, 238);
  z-index: 3;
}