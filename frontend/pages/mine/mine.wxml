      <input class="inputUserName" placeholder="用户名" focus model:value="{{userName}}"/>
      <input class="inputUserPassword" password placeholder="密码" model:value="{{userPassword}}"/>
    </view>
    <image class="unLoggedImg" src="/image/login.jpg" mode="widthFix"/> -->
  </view>
</view>


