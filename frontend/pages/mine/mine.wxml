<!--pages/mine/mine.wxml-->
<view class="container">
  <naviBar title="我的" showBack="{{false}}"></naviBar>
  <view class="hasLoggedContainer" wx:if="{{isLogin}}">
    <view class="nicknamePart">
      <view class="nicknameNote">昵称</view>
      <input class="nicknameValue" model:value="{{tmpNickname}}" placeholder="{{userInfo.nickname}}" disabled="{{!try2Edit}}" />
    </view>
    <view class="emailPart">
      <view class="emailNote">邮箱</view>
      <input class="emailValue" model:value="{{tmpEmail}}" placeholder="{{userInfo.email}}" disabled="{{!try2Edit}}" />
    </view>

  </view>
  <view wx:else>
    <form bindsubmit="login">
      <view class="loginContainer">
        <view class="loginInfo">
          <input class="inputUsrName" name="email" placeholder="邮箱" focus/>
          <input class="inputUsrPassword" name="password" password placeholder="密码" focus/>
        </view>
        <image class="loginImg" src="/image/login.jpg" mode="widthFix"/>
        <button form-type="submit" class="loginBtn">
          <view class="submitInfo">登录</view>
        </button>
        <button bindtap="register" class="registerBtn">
          <view class="registerInfo">注册</view>
        </button>
      </view>
    </form>
    <!-- <view class="loginInfo">
      <input class="inputUserName" placeholder="用户名" focus model:value="{{userName}}"/>
      <input class="inputUserPassword" password placeholder="密码" model:value="{{userPassword}}"/>
    </view>
    <image class="unLoggedImg" src="/image/login.jpg" mode="widthFix"/> -->
  </view>
</view>


