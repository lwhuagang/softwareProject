/* pages/buyIn/buyIn.wxss */
.head{
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top:0;
  top:0;
}
.container{
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding : 30rpx 25rpx;
  box-sizing: border-box;
  height: 3000rpx;
  width:100%;
  position: absolute;
  margin-top:130rpx;
}
.fundName{
  height: 80rpx;
  background: white;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
  font-size: 45rpx;
  border-radius: 20rpx;

}
.buyPart{
  background:white;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.buyTitle{
  display: flex;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-between;
  align-items: center;
  height: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  /* border: 1rpx solid red; */
}
.buyNote{
  font-size: 40rpx;
}
.toDealRule{
  color:#2b83fe;
  font-size: small;
  text-align: center;
}
.inputPart{
  display: flex;
  height: 160rpx;
  align-items: center;
}
.inputSubPart{
  /* border: 1rpx solid green; */
  width: 90%;
  height: 100%;
  height:130rpx;
  font-size: 80rpx;

}
.cancelPart{
  /* border: 1rpx solid red; */
  height: 80rpx;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shortCutPart{
  display: flex;
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 50rpx;
}
.shortCut{
  margin-right: 20rpx;
  background: #f1f8fe;
  color: #1b7bff;
  font-size: small;
  padding-left:5rpx;
  padding-right: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottomNote{
  border-top: 2rpx solid #dcdcdc;
  padding-left:20rpx;
  padding-bottom: 20rpx;
  padding-top:20rpx;
  font-size: small;
  /* text-decoration-line: line-through; */
  color:#808080;
}
.buyMinWarn{
  color:#ea5f2c;
}
.confirmPart{
  display:flex;
  position: absolute; 
  width:100%;
  bottom:50rpx;
}
.confirmButton{
  border: 1rpx solid red;
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.confirmButtonDisable{
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:#a6c7fa;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 80rpx;
  color:white;
}
.confirmButtonAble{
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:#1678ff;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 80rpx;
  color:white;
}