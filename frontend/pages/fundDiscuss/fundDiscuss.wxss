/* pages/fundDetail/fundDetail.wxss */
.head{
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top:0;
}
.container {
  height: 3000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  position: absolute;
  margin-top: 130rpx;
}

.fundCard {
  display: flex;
  position: relative;
  border: 1rpx solid #f1eeee;
  border-radius: 15rpx;
  width: 85%;
  height: 220rpx;
  margin-top: 30rpx;
  background: white;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-bottom: 5rpx;
}

.upGrowth {
  display: flex;
  position: relative;
  flex-direction: column;
  border: 1rpx solid #f1eeee;
  border-radius: 15rpx;
  width: 23%;
  height: 175rpx;
  margin-top: 20rpx;
  background: linear-gradient(60deg, red, rgb(255, 136, 0)); 
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.downGrowth {
  display: flex;
  position: relative;
  flex-direction: column;
  border: 1rpx solid #f1eeee;
  border-radius: 15rpx;
  width: 140rpx;
  height: 175rpx;
  margin-top: 20rpx;
  background: linear-gradient(60deg, green, rgb(8, 223, 8)); 
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.growth {
  margin-top: 45rpx;
  font-size: 22px;
  font-weight: 550;
  color: white;
}

.netWorthDate {
  text-align: center;
  margin-top: 5rpx;
  font-size: 23rpx;
  color: white;
}

.baseInfo {
  display: flex;
  position: relative;
  flex-direction: column;
  /*border: 1rpx solid #f1eeee;*/
  border-radius: 15rpx;
  width: 70%;
  height: 180rpx;
  margin-top: 20rpx;
  margin-left: 10px;
  background: white;
}

.fundName {
  margin: 10rpx 10rpx 10rpx 10rpx;
  font-size: 19px;
  color: rgb(31, 31, 31);
}

.fundCode {
  margin: 10rpx 10rpx 10rpx 10rpx;
  font-size: 15px;
  color: dimgrey;
}

.commentCard {
  display: flex;
  flex-direction: column;
  position: relative;
  border: 1rpx solid #f1eeee;
  border-radius: 15rpx;
  width: 85%;
  margin-top: 20rpx;
  background: white;
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.userName {
  display: flex;
  position: relative;
  border: 1rpx solid #f1eeee;
  border-radius: 15rpx;
  width: 90%;
  height: 80rpx;
  margin-top: 20rpx;
  background: rgb(231, 238, 252);
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.dot {
  display: flex;
  position: relative;
  border: 1rpx solid #f1eeee;
  border-radius: 30px;
  width: 50rpx;
  height: 50rpx;
  background: rgb(12, 71, 128);
  margin-top: 7px;
  margin-right: 7px;
}

.nameText {
  padding-top: 18rpx;
  font-size: 17px;
  color: rgb(72, 72, 73);
}

.commentPart {
  display: flex;
  position: relative;
  border-radius: 15rpx;
  width: 95%;
  margin-top: 10rpx;
  background: white;
  padding-left: 25rpx;
}

.commentText {
  overflow:hidden; 
  font-size: 16px;
  text-indent:2em;
  padding-top: 5rpx;
  padding-bottom: 20rpx;
  color:rgb(57, 57, 58);
}
