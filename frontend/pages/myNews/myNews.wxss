
.head{
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top:0;
  z-index: 99;
}

.container {
  height: 3000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  position: absolute;
  margin-top: 130rpx;
}

.readAndClear{
  margin-top: 50rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row-reverse;
  
}

.allRead{
  width: 200rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f7f7f7;
  margin-right: 40rpx;
  margin-left: 20rpx;
  text-align: center;
  box-shadow:0px 2px 3px 3px rgb(228, 227, 227);
}

.readText{
  padding-top: 8rpx;
  color: rgb(77, 77, 77);
}

.allClear{
  width: 200rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f7f7f7;
  margin-right: 20rpx;
  margin-left: 20rpx;
  text-align: center;
  box-shadow:0px 2px 3px 3px rgb(226, 226, 226);
}

.clearText{
  padding-top: 8rpx;
  color: rgb(77, 77, 77);
}


.newsItem{
  width: 100%;
}

.sendTime{
  width: 100%;
  text-align: center;
  padding-top: 20px;
  font-size: 14px;
  color: darkgrey;
}

.news{
  display: flex;
  width: 100%;
  padding-bottom: 10px;
}


.senderImg{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  background-color: #4053a3;
}

.senderImg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.newsBlock{
  position: relative;
  border: 1rpx solid #f1eeee;
  border-bottom-right-radius: 30rpx;
  box-shadow:0px 2px 3px 3px rgb(243, 243, 243);
  width: 65%;
  background: white;
  margin-top: 30rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-bottom: 5rpx;
}

.newsTitle{
  position: relative;
  border-bottom: 1rpx solid #e4e4e4;
  width: 90%;
  height: 70rpx;
  background: rgb(255, 255, 255);
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-bottom: 5rpx;
}

.titleText{
  font-size:34rpx;
  margin-top:30rpx;
  color:rgb(44, 44, 44);
}

.newsContent{
  width: 90%;
  height: 450rpx;
  padding-left: 20rpx;
  padding-right: 25rpx;
  margin-bottom: 5rpx;
  overflow:hidden; 
}

.contentText{
  font-size:30rpx;
  margin-top:20rpx;
  color:rgb(44, 44, 44);
  overflow:hidden;
}

.more{
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.moreText{
  font-size:13px;
  width: 90%;
  text-align: right;
  color:rgb(106, 112, 124);
  overflow:hidden;
}

.moreImg{
  width: 15px;
  height: 15px;
  overflow: hidden;
  margin-left: 5rpx;
  margin-right: 25rpx;
  background-color: #ffffff;
}

.moreImg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.dot{
  width: 15px;
  height: 15px;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
  margin-left: -25rpx;
  margin-right: 10rpx;
  background-color: rgb(184, 93, 93);
  box-shadow:0px 1px 2px 2px rgb(238, 238, 238);
  z-index: 3;
}