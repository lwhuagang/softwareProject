/* pages/myComments/myComments.wxss */

.head {
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top: 0;
  z-index: 99;
  top:0;
}
.space{
  height:10px
}
.container {
  position: absolute;
  width: 100%;
  margin-top: 130rpx;
}
.comment{
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 10%;
  margin-bottom: 10px;
}
.commentHead{
  width: 100%;
  display: flex;
}
.txt{
  word-break: break-all;
  width: 100%;
  margin-bottom: 20px;
}
.headPic{
  height:40px
}
.headPic image{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  background-color: #4053a3;
}

.nickName{
  height: 30px;
  width: 100%;
}
.time{
  height: 20px;
  font-size: small;
  color: #777777;
}
.pic{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #4053a3;
}
.fundName{
  font-size: small;
  color: #666666;
}