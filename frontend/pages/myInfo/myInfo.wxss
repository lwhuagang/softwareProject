/* pages/myInfo/myInfo.wxss */
Page {
  color:#313131;
}

.head{
  position: fixed;
  width: 100%;
  height: 100rpx;
  margin-top:0;
  top:0;
}
.container{
  position: absolute;
  width: 100%;
  margin-top:130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userInfoPart{
  width:100%;
}
.idInfo{
  width:100%;
}
.hint{
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  margin-left: 25rpx;
}
.infoItem{
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  width:100%;
  height: 100rpx;
  align-items: center;
  padding-left: 20rpx;
  background:white;
}
.infoHead{
  width: 20%;
  padding-right: 20rpx;
  border-right: 1rpx solid #dcdcdc;
  text-align: center;
}
.infoContent{
  padding-left:20rpx;
  width: 65%;
}
.Btn{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
  background: #5484dd;
  box-shadow:0px 2px 5px 5px rgb(228, 228, 228);
  position: relative;
  padding-top: 15rpx;
}
.btnInfo{
  width:100%;
  text-align: center;
  font-size: large;
  color: rgb(245, 245, 245);
  padding-top: 5rpx;
}