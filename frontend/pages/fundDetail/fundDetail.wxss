.ratios {
  display: flex;
  height: 140rpx;
  /* border: 1rpx solid green; */
  margin-top: 10rpx;
}
.totalGrowthRatio {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-evenly;
  color: red;
  /* border: 1rpx solid red; */
  width: 40%;
  height: 140rpx;
  font-size: 50rpx;
  /* margin-top: 10rpx; */
  box-sizing: border-box;
}
.note1 {
  color: #a4a4a4;
  font-size: 30rpx;
}
.dayGrowthRatio {
  width: 30%;
  height: 100%;
  /* border: 1rpx solid red; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.greenDayGrowth{
  color: green;
  margin-top: 30rpx;
}
.redDayGrowth {
  color: red;
  margin-top: 30rpx;
}
.note2 {
  color: #a4a4a4;
  font-size: 30rpx;
  margin-top: 16rpx;
}
.netWorthPart{
  /* border:1rpx solid red; */
  box-sizing: border-box;
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.netWorth {
  margin-top: 30rpx;
  margin-left: 10rpx;
  color: #424242;
}
.netWorthDate {
  font-size: 30rpx;
  color: #a4a4a4;
  margin-top: 16rpx;
  margin-left: 20rpx;
}
.tmpChart {
  width: 1000rpx;
  height: 1000rpx;
  border: 1rpx solid red;
}