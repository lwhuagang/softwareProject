/* pages/fundDetail/fundDetail.wxss */
.container {
  height: 1500px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bluePad {
  margin-top: 0rpx;
  background: #0081ff;
  color: #0081ff;
  width: 100%;
  height: 100rpx;
  position: absolute;
}
.blueWave {
  margin-top: 0rpx;
  background: #0081ff;
  color: #0081ff;
  position: absolute;
  width: 200%;
  height: 150rpx;
  border-radius: 200%;
}
.fundCard {
  display: flex;
  position: absolute;
  flex-direction: column;
  border: 1rpx solid #dcdcdc;
  border-radius: 15rpx;
  width: 86%;
  height: 330rpx;
  margin-top: 30rpx;
  background: white;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.fundName {
  /* border: 1rpx solid green; */
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  margin-top: 20rpx;
}
.fundCodeAndType {
  /* border: 1rpx solid black; */
  display: flex;
}
.fundCode {
  color: #a4a4a4;
  font-size: 30rpx;
}
.fundType {
  margin-left: 20rpx;
  font-size: 30rpx;
  background: #e8f1ff;
  color: #3489fe;
}
.ratios {
  display: flex;
  height: 140rpx;
  /* border: 1rpx solid green; */
  margin-top: 10rpx;
}
.totalGrowthRatio {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-evenly;
  /* border: 1rpx solid red; */
  width: 38%;
  height: 140rpx;
  font-size: 50rpx;
  /* margin-top: 10rpx; */
  box-sizing: border-box;
}
.redTotalGrowth {
  color: red;
}
.greenTotalGrowth{
  color:green;
}
.note1 {
  color: #a4a4a4;
  font-size: 30rpx;
}
.dayGrowthRatio {
  width: 30%;
  height: 100%;
  /* border: 1rpx solid red; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.greenDayGrowth{
  color: green;
  margin-top: 30rpx;
}
.redDayGrowth {
  color: red;
  margin-top: 30rpx;
}
.note2 {
  color: #a4a4a4;
  font-size: 30rpx;
  margin-top: 16rpx;
}
.netWorthPart{
  /* border:1rpx solid red; */
  box-sizing: border-box;
  width: 32%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.netWorth {
  margin-top: 30rpx;
  margin-left: 10rpx;
  color: #424242;
}
.netWorthDate {
  font-size: 30rpx;
  color: #a4a4a4;
  margin-top: 16rpx;
  margin-left: 20rpx;
}
.positionPie {
  width: 100%;
  height: 100%;
}
.emptyPie{
  width: 100%;
  height: 100%;
}
.positionPart{
  background: white;
  width: 94%;
  height: 600rpx;
  border: 1rpx solid #dcdcdc;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.detailLine {
  padding-top: 100rpx;
  width: 100%;
  height: 600rpx;
}
.linePart{
  width: 94%;
  height: 500rpx;
  border: 1rpx solid #dcdcdc;
  display: flex;
  flex-direction: column;
  margin-top: 400rpx;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
  background:white;
}
.growthData{
  width: 94%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #dcdcdc;
  border-radius: 10rpx;
  margin-top: 50rpx;
  background: white;
}
.growthTitle {
  width: 98%;
  height: 60rpx;
  /* border: 1rpx solid green; */
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 3rpx solid #9a9ba2;
  font-size: medium;
}
.growthLegend{
  width: 98%;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #dcdcdc;
  /* border: 1rpx solid blue; */
}
.growthTimeNote{
  color: #ababab;
  width: 50%;
  text-align: center;
}
.growthNote{
  color: #ababab;
  width: 50%;
  text-align: center;
}
.growthItem {
  width: 100%;
  height: 60rpx;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-around;
}
.divLine{
  width: 100%;
  background: #f5f5f5;
  height: 3rpx;
}
.growthTime {
  /* border: 1rpx solid blue; */
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}