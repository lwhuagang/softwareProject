<!--pages/register/register.wxml-->
<view class="container">
  <view class="regBlock">
        <!-- 昵称 -->
      <view class="part nickPart">
        <view class="instr nickIntr">昵称:</view>
        <input class="input inputNick" model:value="{{nickname}}" focus/>
      </view>
      <view class="divLine"></view>
        <!-- 邮箱 -->
      <view class="part mailPart">
        <view class="instr mailInstr">邮箱:</view>
        <input class="input inputEmail" model:value="{{email}}" focus/>
      </view>
      <view class="divLine"></view>
        <!-- 密码 -->
      <view class="part pswdPart">
        <view class="instr pswdIntr">密码:</view>
        <input class="input inputPswd" model:value="{{password}}" focus password/>
      </view>
      <view class="divLine"></view>
        <!-- 确认密码 -->
      <view class="part cfmPart">
        <view class="instr cfmInstr">确认密码:</view>
        <input class="input inputConfirm" model:value="{{confirmPswd}}" focus password bindblur="checkPswd"/>
      </view>
      <view class="divLine"></view>
      <!-- 初始金额 -->
      <view class="part moneyPart">
        <view class="moneyNote">初始金额(千元):</view>
        <view class="moneyBtn">
          <stepper min="1" max="{{maxMoney}}" integer value="{{defaultMoney}}" bind:change="setMoney"></stepper>
        </view>
      </view>
      <view class="divLine"></view>
        <!-- 验证码 -->
      <view class="captchaPart">
        <input class="inputCaptcha" model:value="{{captcha}}" focus/>
        <block wx:if="{{smsFlag==false}}">
          <button class="captchaBtn1" bindtap="getCaptcha" plain>
            发送验证码
          </button>
        </block>
        <block wx:else>
          <button class="captchaBtn2" disabled>
            {{sendTime}}
          </button>
        </block>
      </view>
      <view class="divLine"></view>
      <!-- 注册 -->
      <view class="registerPart">
        <button bindtap="register" class="regBtn">注册</button>
      </view>
  </view>
</view>
<view class="head">
  <naviBar title="注册"></naviBar>
</view>

