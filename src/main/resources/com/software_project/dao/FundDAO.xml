<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.software_project.dao.FundDAO">

    <insert id="insertFund" >
        insert into soft.fund values (#{code},#{name},#{type},#{buyMin},#{buySourceRate},#{buyRate},#{manager}, #{netWorth})
    </insert>
    <delete id="deleteFund">
        delete from fund where code = #{fundCode}
    </delete>

    <select id="searchByCode" resultType="com.software_project.pojo.Fund">
        select * from soft.fund where code = #{code}
    </select>

    <select id="searchByName" resultType="com.software_project.pojo.Fund">
        select * from soft.fund where name like concat('%',#{name},'%')
    </select>

    <select id="holdFund" resultType="com.software_project.pojo.Fund">
        select * from soft.fund f left join soft.hold h on f.code = h.fundCode
        where h.userEmail = #{email}
    </select>
    <select id="getAllFunds" resultType="com.software_project.pojo.Fund">
        select * from soft.fund
    </select>
    <select id="getFundsByPage" resultType="com.software_project.pojo.Fund">
        select * from soft.fund limit (#{pageIndex}-1)*#{pageSize},#{pageSize}
    </select>
    <select id="getFundsNum" resultType="java.lang.Integer">
        select count(*) from soft.fund;
    </select>

</mapper>