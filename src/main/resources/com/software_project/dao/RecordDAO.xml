<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.software_project.dao.RecordDAO">
    <delete id="deleteOneRecord" parameterType="com.software_project.pojo.Record">
        delete from soft.record where userEmail = #{userEmail} and fundCode = #{fundCode} and `time` = #{time}
    </delete>
    <select id="getRecords" resultType="com.software_project.pojo.Record">
        select * from soft.record where userEmail = #{userEmail} and fundCode = #{fundCode};
    </select>
    <select id="getRecordsByUserEmail" resultType="com.software_project.pojo.Record"
            parameterType="java.lang.String">
        select * from soft.record where userEmail = #{userEmail}
    </select>
</mapper>